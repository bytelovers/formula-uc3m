{
	"extends": ["eslint:recommended"],
	"parserOptions": {
		"ecmaVersion": 6,
		"ecmaFeatures": {
			"arrowFunctions": true,
			"classes": false,
			"defaultParams": false,
			"modules": false,
			"jsx": false
		}
	},
	"env": {
		"browser": true,
		"node": true,
		"es6": true
	},
	"rules": {
		"no-extra-semi": 1,
		"no-unused-vars": [1, {
			"args": "none"
		}],
		"no-console" : [1, { "allow": ["warn", "error", "info"]}],
		"indent": ["error", 1, { "SwitchCase": 1 }],
		"curly": [1, "all"],
		"semi": [1, "always"],
		"dot-notation": 1,
		"valid-jsdoc": 1,
		"prefer-const": 1,
		"no-eval": 1
	}
}